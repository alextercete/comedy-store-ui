{
  "name": "comedy-store-ui",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:css && npm run build:html && npm run build:js",
    "build:css": "jscat app/app.css > dist/app.css",
    "build:html": "jscat app/index.html > dist/index.html",
    "build:js": "node tasks/build.js > dist/bundle.js && npm run build:js:templates && npm run build:js:vendor",
    "build:js:templates": "npm-html2js -i \"app/**/!(index).html\" -b \"app\" -m \"comedyStore.templates\" -o \"dist/templates.js\"",
    "build:js:vendor": "jscat node_modules/angular/angular.js > dist/vendor.js",
    "clean": "rimraf dist/*",
    "lint": "npm run lint:style && npm run lint:quality",
    "lint:quality": "jshint app",
    "lint:style": "jscs app",
    "preserve": "npm run build",
    "serve": "http-server -p 9090 dist/",
    "test": "karma start --single-run",
    "watch:test": "karma start"
  },
  "author": "Alex Tercete",
  "dependencies": {
    "angular": "^1.3.15"
  },
  "devDependencies": {
    "angular-mocks": "^1.3.15",
    "http-server": "^0.8.0",
    "jasmine-core": "^2.3.4",
    "jscat": "0.0.2",
    "jscs": "^1.13.1",
    "jshint": "^2.7.0",
    "karma": "^0.12.31",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.3.5",
    "karma-ng-html2js-preprocessor": "^0.1.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-sinon": "^1.0.4",
    "npm-html2js": "^0.1.8",
    "rimraf": "^2.3.3",
    "shelljs": "^0.4.0"
  }
}
